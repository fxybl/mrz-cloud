<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--服务名-->
    <property name="APP_NAME" value="cloud-eureka-client-user-service"/>
    <!--日志路径(linux下)-->
    <property name="LOG_PATH" value="/var/log/cloud"/>
    <!--windows路径-->
    <!--<property name="LOG_PATH" value="C:/Users/Administrator/Desktop/log"/>-->
    <springProperty scope="context" name="PORT" source="server.port"/>
    <!--日志格式表达式-->
    <property name="LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS} ${APP_NAME} %highlight(%-5level) %yellow(%X{X-B3-TraceId}),%green(%X{X-B3-SpanId}),%blue(%X{X-B3-ParentSpanId}) %yellow(%thread) %green(%logger) %msg%n"/>

   <!--设置2个地方保存日志，一个是控制台，一个是保存为日志文件,(使用此标签<appender>)-->
    <!--ConsoleAppender控制台-->
    <!--控制台日志设置-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!--日志设置-->
    <!--RollingFileAppender文件方式保存-->
    <appender name="logstash" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--日志绝对路径以及命名-->
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyy-MM-dd}/${APP_NAME}.log</fileNamePattern>
            <!--保留时间-->
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <!--编码方式-->
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <pattern>
                    <pattern>
                        {
                        "app": "${APP_NAME}",
                        "port": "${PORT}",
                        "level": "%level",
                        "trace": "%X{X-B3-TraceId:-}",
                        "span": "%X{X-B3-SpanId:-}",
                        "parent": "%X{X-B3-ParentSpanId:-}",
                        "thread": "%thread",
                        "class": "%logger{40}",
                        "message": "%message",
                        "stack_trace": "%exception{10}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!--此包名下面的日志级别-->
    <logger name="com.zqj" level="warn"/>
    <logger name="java.sql.PreparedStatement" level="warn"/>
    <logger name="java.sql.Statement" level="warn"/>
    <logger name="java.sql.Connection" level="warn"/>
    <logger name="org.mybatis" level="warn"/>
    <logger name="io.swagger" level="warn"/>
    <!--日志级别-->
    <root level="warn">
        <!--日志展示在控制台以及自己定义的logstash-->
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="logstash"/>
    </root>
</configuration>